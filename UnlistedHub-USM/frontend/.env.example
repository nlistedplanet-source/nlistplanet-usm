# Backend API URL - Update this after deploying backend to Render
REACT_APP_API_URL=https://nlistplanet-backend.onrender.com/api

# App Configuration
REACT_APP_NAME=Nlist Planet
REACT_APP_PLATFORM_FEE_PERCENTAGE=2
REACT_APP_BOOST_PRICE=100

# Firebase Configuration (Required for Google OAuth & Push Notifications)
# Get these from Firebase Console: https://console.firebase.google.com/
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_VAPID_KEY=your-vapid-key

# Build Configuration (for Vercel/Netlify)
CI=false
DISABLE_ESLINT_PLUGIN=true
